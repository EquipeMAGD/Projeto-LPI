#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
#include <windows.h>
#include <locale.h>
#include <dos.h>

void main ()
{
    int i, j;
    for(i=0; i<10; i++)
    {
        for(j=0; j<10; j++)
        {
            if(i==j)
                putchar('*');
            else
                putchar(' ');

        }
        putchar('\n');
        Sleep(500);
    }
    int n=10;
    while(n>=0){
    system("cls");
    for(i=0; i<=n; i++)
    {
        for(j=0; j<10; j++)
        {
            if(i==j)
               { putchar('*'); printf("%i", n); }
            else
                putchar(' ');

        }
        putchar('\n');
        //Sleep(500);
    }
    Sleep(500);
    n--;
    }
    system("cls");
}
