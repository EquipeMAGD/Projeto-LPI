#include <stdio.h>
#include <stdlib.h>
#include <windows.h>

void main ()
{
    char mapa[31][31], dir;
    int i, j, x=0, y=0, v;
    while(1)
    {
        for (i=0; i<31; i++)
        {
            for (j=0; j<31; j++)
            {
                if(i==x && j==y)
                {
                    mapa[i][j]='O';
                    printf("%c ", mapa[i][j]);
                }
                else
                {
                    mapa[i][j]=' ';
                    printf("%c ", mapa[i][j]);
                }
            }
            putchar('\n');
        }
        dir=getch();
        switch (dir)
        {
        case 'w':
            x--;
            break;
        case 's':
            x++;
            break;
        case 'a':
            y--;
            break;
        case 'd':
            y++;
            break;
        }
        system("cls");
    }
}
