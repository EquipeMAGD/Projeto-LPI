void main ()
{
    char matriz[10][10], i, j;
    int v;
    //matriz[0][0]='*';
    while(1)
    {
        for(i=0; i<10; i++)
        {
            v=i;
            for(j=0; j<10; j++)
            {
                if(j==0)
                    matriz[i][j]='*';
                else
                    matriz[i][j]=' ';
                if(matriz[i-1][j]=='*')
                    matriz[i-1][j]=' ';

                printf("%c", matriz[i][j]);


            }
            Sleep(500);
            system("cls");
            putchar('\n');
            while(v>0)
            {
                v--;
                putchar('\n');
            }
        }
    }
  }
